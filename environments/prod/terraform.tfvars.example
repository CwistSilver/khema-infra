# Azure Configuration
location = "westeurope"

# Shared Resources
shared_resource_group_name = "rg-khema-shared"
postgresql_server_name     = "khema-postgresql"
postgresql_database_name   = "langfuse_prod"

# PostgreSQL Credentials
# IMPORTANT: NEVER commit actual credentials!
# Use Azure Key Vault or environment variables:
#   export TF_VAR_postgresql_admin_username="your_username"
#   export TF_VAR_postgresql_admin_password="your_password"
postgresql_admin_username = "admin_username_here"
postgresql_admin_password = "admin_password_here"

# Langfuse Secrets
# Generate with: openssl rand -base64 32
# Store in Azure Key Vault for production!
langfuse_secret_salt = "generate_random_32_char_string_here"
nextauth_secret      = "generate_random_32_char_string_here"

# NextAuth URL - use your production domain
# After first apply, update this with your custom domain or the output from 'langfuse_web_url'
nextauth_url = "https://langfuse.yourdomain.com"
